{% extends 'layout.njk' %}
{% block head %}
  <link rel="stylesheet" href="/teachers/show.css">
{% endblock %}
{% block content %}
  <main>
    <div class="cards">
      <section class="avatar"
      style="background: url('{{ teacher.avatar_url }}') no-repeat center / cover;
      margin: 50px auto;">
      </section>
      <section class="info-card">
        <h3>Detalhes</h3>

        <div class="item">
          <div>Professor(a)</div>
          <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
          <div>Idade</div>
          <div>{{ teacher.age }}</div>
        </div>

        <div class="item">
          <div>Grau de escolaridade</div>
          <select name="education_level">
            <option value="{{ teacher.education_level}}">
            {{ teacher.education_level }}
            </option>
          </select>
        </div>

        <div class="item">
          <div>Tipo de aula</div>
          <div>
            <span class="input">
              <input 
                type="radio" 
                name="class_type"
                value="live"
                {% if teacher.class_type == "live"%}
                  checked
                {% endif %}>
              Presencial
            </span>
            <span class="input">
              <input 
                type="radio"
                value="liveInternet" 
                name="class_type"
                {% if teacher.class_type == "liveInternet"%}
                  checked
                {% endif %}>
              Á distância
            </span>
          </div>
        </div>

        <div class="item">
          <div>Acompanhamento</div>
          <div>
            {% for class in teacher.subjects_taught %}
              <span>{{ class }}</span>
            {% endfor %}
          </div>
        </div>

        <div class="item">
          <div>Desde</div>
          <div>{{ teacher.created_at }}</div>
        </div>

        <a href="/teachers/{{ teacher.id }}/edit">Editar</a>
        <a href="/teachers" class="back">Voltar</a>

      </section>
    </div>
  </main>
{% endblock %}